<html lang="en">
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link href='../font-awesome/css/fontawesome.css' rel='stylesheet' />
    <link href='../font-awesome/css/all.css' rel='stylesheet' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700;900&family=Rubik:wght@300;400;500;600;700;900&display=swap'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='/auth/style.css' />
    <script defer type='module' src='/auth/script/appMain.js'></script>
    <title>Maderia</title>
  </head>
  <body>
    <header class='header'>
      <div class='container'>
        <nav class='nav'>
          <a href='#' class='nav__logo'>maderia.com</a>
          <div class='nav-links'>
            {{#if user}}
              <a class='nav-link btn btn-less' href='/client/nearbyHotels'>
                Nearby hotels</a>
            {{/if}}

            <a
              class='nav-link btn btn-less logout'
              href='/auth/signout'
            >Logout</a>
            <a href='/auth/profile' class='nav-link profile-icon'>
              <img
                class='nav-link-img'
                src='../img/customer-1.jpg'
                alt='user-photo'
              />
              <span class='username'>{{name}}</span>
            </a>
          </div>
        </nav>

        <div class='hero__text'>
          <p class='hero__text-p'>welcome
            <span class='username'>{{name}}</span>
            You are logged in as a
            {{client_type}}</p>
          <h1 class='heading-primary'>Find your next stay</h1>
          <p class='hero__text-p'>
            search low price on hotels, homes and much more...
          </p>
        </div>
      </div>
    </header>
  </body>
</html>